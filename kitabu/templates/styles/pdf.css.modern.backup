@import "./files/normalize.css";

:root {
  --primary-color: #2c3e50;
  --accent-color: #3498db;
  --text-color: #2c3e50;
  --light-gray: #ecf0f1;
  --border-color: #bdc3c7;
  --page-margin: 2.5cm;
}

@page {
  size: A4 portrait;
  margin: var(--page-margin);
}

@page chapter {
  @bottom-center {
    content: counter(page);
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 10px;
    color: #7f8c8d;
    margin-bottom: 1cm;
  }
}

@page frontcover {
  margin: 0;
  background: #ffffff;
}

@page white {
  margin: 0;
  background: #fff;
}

* {
  box-sizing: border-box;
}

body {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 11pt;
  line-height: 1.6;
  color: var(--text-color);
  font-weight: 400;
}

a {
  color: var(--accent-color);
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

.go-top {
  display: none;
}

/* White page */
.white-page {
  page: white;
  page-break-before: always;
  page-break-after: always;
}

.white-page:before {
  content: "";
}

/* Modern frontcover */
.frontcover {
  page: frontcover;
  padding: 4cm 3cm;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.frontcover * {
  margin: 0;
}

.frontcover .logo {
  margin-bottom: 3cm;
  max-width: 300px;
}

.frontcover .logo img {
  max-width: 100%;
  height: auto;
}

.frontcover .description {
  font-size: 28pt;
  font-weight: 300;
  color: var(--primary-color);
  margin-bottom: 2cm;
  max-width: 500px;
  line-height: 1.3;
}

.frontcover .authors {
  font-size: 14pt;
  font-weight: 400;
  color: #7f8c8d;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.frontcover .authors:before {
  content: "";
}

/* Modern chapter styling */
.chapters {
  counter-reset: chapter;
}

.chapter {
  page: chapter;
  page-break-before: always;
  counter-increment: chapter;
}

.chapter > h1,
.chapter > h2 {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 300;
  font-size: 24pt;
  color: var(--primary-color);
  margin: 0 0 1.5cm 0;
  padding-bottom: 0.5cm;
  border-bottom: 2px solid var(--light-gray);
}

.chapter > h1:before,
.chapter > h2:before {
  content: "Chapter " counter(chapter);
  display: block;
  font-size: 12pt;
  font-weight: 400;
  text-transform: uppercase;
  color: var(--accent-color);
  margin-bottom: 0.3cm;
  letter-spacing: 1px;
}

.chapter > h3 {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 400;
  font-size: 16pt;
  color: var(--primary-color);
  margin: 1.2cm 0 0.6cm 0;
}

.chapter > h4 {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 500;
  font-size: 13pt;
  color: var(--primary-color);
  margin: 1cm 0 0.4cm 0;
}

.chapter > h5 {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 600;
  font-size: 11pt;
  color: var(--primary-color);
  margin: 0.8cm 0 0.3cm 0;
}

.chapter > h6 {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 600;
  font-size: 10pt;
  color: #7f8c8d;
  margin: 0.6cm 0 0.2cm 0;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Modern paragraphs and text */
p {
  margin: 0 0 0.6cm 0;
  text-align: justify;
  hyphens: auto;
}

/* Lists */
ul, ol {
  margin: 0.4cm 0;
  padding-left: 1.2cm;
}

li {
  margin: 0.2cm 0;
  line-height: 1.5;
}

/* Code highlighting */
p code,
li code {
  font-size: 9pt;
  font-family: "SF Mono", Monaco, "Cascadia Code", "Roboto Mono", Consolas, "Courier New", monospace;
  background: var(--light-gray);
  padding: 2px 4px;
  border-radius: 3px;
  color: var(--primary-color);
}

.highlight {
  background: var(--light-gray);
  padding: 0.5cm;
  font-size: 9pt;
  border-radius: 4px;
  margin: 0.5cm 0;
  border-left: 4px solid var(--accent-color);
}

.highlight * {
  font-family: "SF Mono", Monaco, "Cascadia Code", "Roboto Mono", Consolas, "Courier New", monospace;
}

.highlight .gutter {
  color: #95a5a6;
  padding-right: 0.5cm;
}

/* Modern table of contents */
.table-of-contents {
  page: chapter;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.table-of-contents > h2 {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 300;
  font-size: 24pt;
  color: var(--primary-color);
  margin: 0 0 1.5cm 0;
  padding-bottom: 0.5cm;
  border-bottom: 2px solid var(--light-gray);
}

.table-of-contents a {
  text-decoration: none;
  color: var(--text-color);
}

.table-of-contents a:hover {
  color: var(--accent-color);
}

.table-of-contents .level2,
.table-of-contents .level3,
.table-of-contents .level4,
.table-of-contents .level5,
.table-of-contents .level6 {
  display: none;
}

/* Table of Contents - Level 1 (H1) headers only */
.table-of-contents .level1 {
  margin-top: 0.8cm;
}

.table-of-contents .level1 a {
  font-weight: 500;
  color: var(--primary-color);
  font-size: 14pt;
  position: relative;
  display: block;
  padding: 0.3cm 0;
  border-bottom: 1px solid #ecf0f1;
}

.table-of-contents .level1 a:after {
  content: target-counter(attr(href), page);
  position: absolute;
  right: 0;
  color: var(--accent-color);
  font-weight: 400;
}

/* Modern tables */
table {
  width: 100%;
  border-collapse: collapse;
  margin: 0.8cm 0;
  font-size: 10pt;
}

th, td {
  padding: 0.3cm 0.4cm;
  text-align: left;
  border-bottom: 1px solid var(--border-color);
}

th {
  background: var(--light-gray);
  font-weight: 600;
  color: var(--primary-color);
  font-size: 10pt;
}

tr:nth-child(even) {
  background: #fafbfc;
}

/* Footnotes - simplified for compatibility */
.footnote {
  font-size: 9pt;
  color: #7f8c8d;
  margin-top: 0.5cm;
  padding-top: 0.2cm;
  border-top: 1px solid var(--border-color);
}

/* Modern alert boxes */
.note {
  font-size: 10pt;
  margin: 0.6cm 0;
  padding: 0.5cm 0.6cm;
  border-radius: 4px;
  border-left: 4px solid;
  background: #f8f9fa;
}

.note.info {
  border-left-color: #3498db;
  background: #e3f2fd;
}

.note.warning {
  border-left-color: #e74c3c;
  background: #ffebee;
}

.note.caution {
  border-left-color: #f39c12;
  background: #fff8e1;
}

.note.best-practice {
  border-left-color: #27ae60;
  background: #e8f5e8;
}

/* Block quotes */
blockquote {
  margin: 0.6cm 0;
  padding: 0.4cm 0.8cm;
  border-left: 4px solid var(--accent-color);
  background: var(--light-gray);
  font-style: italic;
  color: #7f8c8d;
}

/* Horizontal rules */
hr {
  border: none;
  height: 1px;
  background: var(--border-color);
  margin: 1cm 0;
}
